<div class="container">
  <div class="mt-4">
  <div class="row text-center">
    <div class="col-6">
      <h4 class="bg-light">ジャンル一覧・追加</h4>
    </div>
  </div>
  </div>

<%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
      <div class="mt-5">
        <div class="row justify-content-around">
          <div class="col-2"><%= f.label :ジャンル名 %></div>
          <div class="col"><%= f.text_field :name %></div>
          <div class="col"><%= f.submit '新規登録', class: "btn btn-success" %></div>
        </div>
      </div>
     <div class="col-8">
      <table class="table table-hover table-inverse">
　　　<thead>
        <tr class="table-active">
          <th>ジャンル</th>
          <th></th>
        </tr>

      </thead>
      <tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", genre_edit_path(genre.id), class: "btn btn-success" %></td>
    </tr>
  <% end %>
      </tbody>
      </table>
     </div>
  </div>
<% end %>
</div>