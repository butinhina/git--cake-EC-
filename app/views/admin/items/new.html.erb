<h1>商品新規登録</h1>

<%= form_with model: @item, url: admin_item_infomations_path, method: :post do |f| %>
  <div>
    <%= f.label :商品画像 %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="field">
       <%= f.label :商品名 %>
       <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :商品説明 %>
    <%= f.text_field :introduction %>
  </div>

  <div class="field">
    <%= f.label :ジャンル %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name%>
  </div>

  <div class="field">
    <%= f.label :税込価格 %>
    <%= f.text_field :price %>
    <%= f.label :円 %>
  </div>

  <div class="field">
    <%= f.label :販売ステータス %>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :販売中 %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :販売停止中 %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>