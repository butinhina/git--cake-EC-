<div class="container">
 <div class="mt-4">
  <div class="row text-center">
    <div class="col-5">
      <h4 class="bg-light">ジャンル編集</h4>
    </div>
  </div>
 </div>
 <div class="mt-5">
<%= form_with model: @genre, url: genre_update_path(@genre.id), method: :patch do |f| %>
  <div class="row justify-content-around">
    <div class="col-2"><%= f.label :ジャンル名 %></div>
    <div class="col"><%= f.text_field :name %></div>
    <div class="col"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
  </div>
<% end %>
 </div>
</div>