 <div class="container">
 <div class="mt-4">
  <div class="row text-center">
    <div class="col-5">
      <h4 class="bg-light">注文履歴一覧</h4>
    </div>
  </div>
 </div>
 <div class="mt-2">
  <table class="table table-hover table-inverse">
    <thead>
        <tr class="table-active">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id) %></td>
          <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
          <% @total = 0 %>
          <td><% order.order_details.each do |order_detail| %>
                <% @total += order_detail.amount %>
              <% end %>
              <%= @total %>
          </td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
 </div>
 <div class="row justify-content-center">
   <%= paginate @orders %>
 </div>
</div>
