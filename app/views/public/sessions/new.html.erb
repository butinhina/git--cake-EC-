<div class="container">
  <div class="mt-4">
  <div class="row text-center">
    <div class="col-3">
      <h4 class="bg-light">ログイン</h4>
    </div>
  </div>
  </div>
 <div class="mt-4">
 <div class="row text-center">
  <div class="col-6">
    <h6 class="bg-light">会員の方はこちらからログイン</h6>
  </div>
 </div>
 </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row justify-content-center">
    <label class="col-3">メールアドレス</label>
    <div class="col-5">
     <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="row  justify-content-center">
    <label class="col-3">パスワード</label>
    <div class="col-5">
     <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>
　<div class="row justify-content-center">
    <div class="col-auto">
      <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
<div class="mt-5">
 <div class="row text-center">
  <div class="col-6">
    <h6 class="bg-light">会員登録がお済みでない方</h6>
  </div>
 </div>
 </div>
<div class="row justify-content-center">
  <div class="col-8">
    <p><%= link_to "こちら", new_customer_registration_path %>　から新規登録を行なってください。</p>
  </div>
</div>
</div>
