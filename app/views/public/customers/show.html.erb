<div class="container">
  <div class="mt-4">
  <div class="row text-center">
    <div class="col-5">
      <h4 class="bg-light">マイページ</h4>
    </div>
  </div>
  </div>
<div class="mt-4">
  <div class="row">
    <div class="float-left"><strong>登録情報</strong></div>
    <div class="col-2"><%= link_to "編集する", customer_edit_path, class: "btn btn-success" %></div>
  </div>
</div>
<div class="row justify-content-start">
  <table class="table table-bordered">
    <tr>
　　  <th class="table-active">氏名</th>
      <td><%= @customer.first_name %> <%= @customer.last_name %></td>
    </tr>
    <tr>
      <th class="table-active">カナ</th>
      <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <th class="table-active">郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th class="table-active">住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th class="table-active">電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th class="table-active">メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>
</div>
 <div class="mt-2">
  <table class="col-3">
    <tr>
     <th>配送先</th>
     <td><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></td>
    </tr>
    <tr>
     <th>注文履歴</th>
     <td><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></td>
    </tr>
  </table>
 </div>
</div>