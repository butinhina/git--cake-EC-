<div class="container">
  <div class="mt-4">
  <div class="row text-center">
    <div class="col-5">
      <h4 class="bg-light">商品新規登録</h4>
    </div>
  </div>
  </div>

<%= form_with model: @item, url: admin_item_infomations_path, method: :post do |f| %>
  <div class="row justify-content-center">
    <div class="col-2"><%= f.label :商品画像 %></div>
    <div class="col-4"><%= f.file_field :image, accept: "image/*" %></div>
  </div>

  <div class="row justify-content-center">
       <div class="col-2"><%= f.label :商品名 %></div>
       <div class="col-4"><%= f.text_field :name %></div>
  </div>

  <div class="row justify-content-center">
    <div class="col-2"><%= f.label :商品説明 %></div>
    <div class="col-4"><%= f.text_field :introduction %></div>
  </div>

  <div class="row justify-content-center">
    <div class="col-2"><%= f.label :ジャンル %></div>
    <div class="col-4"><%= f.collection_select :genre_id, Genre.all, :id, :name %></div>
  </div>

  <div class="row justify-content-center">
    <div class="col-2"><%= f.label :税込価格 %></div>
    <div class="col-4"><%= f.text_field :price %>円</div>
  </div>

  <div class="row justify-content-center">
    <div class="col-2"><%= f.label :販売ステータス %></div>
    <div class="col-4">
      <%= f.radio_button :is_active, :true %>
      <%= f.label :販売中 %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :販売停止中 %>
    </div>
  </div>

  <div class="row justify-content-center">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>
</div>