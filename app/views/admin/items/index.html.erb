<div class="container">
  <div class="row text-center">
    <div class="col"><h4 class="bg-light">商品一覧</h4></div>
    <div class="col"><%= link_to "＋", admin_items_new_path, class: "btn btn-info" %></div>
  </div>


<!--<div class="container">-->
    <div class="col-8 offset-1">
    <table class="table table-hover table-inverse">
    <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
    <div class="row justify-content-center">
      <%= paginate @items %>
    </div>

    </div>
</div>
