<div class="container">
<h2><strong>商品一覧</strong>(全<%= @items_all.count %>件)</h2>
<div class="row">

<% @items.each do |item| %>
  <div class="col" style="padding-right: 0px; padding-left: 0px;">
  <tr>
    <td><%= link_to  public_item_path(item.id) do %>
          <%= image_tag item.image, size: "150x150" %>
        <% end %>
    </td></br>
    <td><%= item.name %></td></br>
    <td><label>¥</label><%= item.with_tax_price %></td>
  </tr></br>
  </div>
<% end %>
</div>
<div class="row justify-content-center">
  <div class="col-auto">
    <%= paginate @items %>
  </div>
</div>
</div>