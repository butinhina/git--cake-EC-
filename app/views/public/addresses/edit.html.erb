<div class="container">
  <div class="row text-center">
    <div class="col-5">
      <h4 class="bg-light">配送先編集</h4>
    </div>
  </div>
<%= form_with model: @address, url: address_update_path(@address.id), method: :patch do |f| %>
        <div class="row">
         <div class="col-4"><%= f.label :郵便番号（ハイフンなし） %></div>
         <div class="g-col"><%= f.text_field :postal_code %></div>
        </div>

        <div class="row">
         <div class="col-4"><%= f.label :住所 %></div>
         <div class="g-col"><%= f.text_field :address %></div>
        </div>

        <div class="row">
         <div class="col-4"><%= f.label :宛名 %></div>
         <div class="g-col"><%= f.text_field :name%></div>
         <div class="g-col"><%= f.submit '登録内容を保存', class: "btn btn-success" %></div>
        </div>
<% end %>
</div>
