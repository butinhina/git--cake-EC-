<div class="container">
 <div class="mt-4">
  <div class="row text-center">
    <div class="col-5">
      <h4 class="bg-light">管理者ログイン</h4>
    </div>
  </div>
 </div>
<%= notice %>
  <%= form_with model: @admin, url: admin_session_path do |f| %>
   <div class="row justify-content-center">
    <div class="col-3"><%= f.label :メールアドレス %></div>
    <div class="col-5"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
   </div>

   <div class="row justify-content-center">
    <div class="col-3"><%= f.label :パスワード %></div>
    <div class="col-5"><%= f.password_field :password, autocomplete: "current-password" %></div>
  </div>

  <!--<% if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%= f.check_box :remember_me %>-->
  <!--    <%= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<% end %>-->

  <div class="row justify-content-center">
    <%= f.submit "ログイン", class: "btn btn-info" %>
  </div>
  <% end %>
</div>
<%= render "admin/shared/links" %>
