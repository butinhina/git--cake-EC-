<div class="container">
<h2>新規会員登録</h2>



<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "public/shared/error_messages", resource: resource %>


<div class="row">
  <label class="col-2">名前</label>
    <div class="col-3">
  <label for="inputName" class="col-form-label">（姓）　</label>
      <%= f.text_field :first_name, autocomplete: "first_name" %>
    </div>
  　<div class="col-3">
　<label for="inputName" class="col-form-label">（名）</label>
    <%= f.text_field :last_name, autocomplete: "last_name" %>
  　</div>
</div>
<div class="row">
  <label class="col-2">フリガナ</label>
    <div class="col-3">
  <label for="inputName" class="col-form-label">（セイ）</label>
      <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
    </div>
    <div class="col-3">
  <label for="inputName" class="col-form-label">（メイ）</label>
    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
    </div>
</div>


<div class="row">
  <label class="col-2">メールアドレス</label>
    <div class="col-3">
  <label for="inputEmail" class="col-form-label">　　　　</label>
      <%= f.text_field :email, autocomplete: "email" %>
    </div>
</div>

<div class="row">
  <label class="col-3">郵便番号(ハイフンなし)</label>
    <div class="col-2.5">
      <%= f.text_field :postal_code, autocomplete: "postal_code" %>
    </div>
</div>
<div class="row">
  <label class="col-3">住所</label>
    <div class="col-2.5">
      <%= f.text_field :address, autocomplete: "address" %>
    </div>
</div>
<div class="row">
  <label class="col-3">電話番号（ハイフンなし）</label>
    <div class="col-2.5">
      <%= f.text_field :telephone_number, autocomplete: "telephone_number" %>
    </div>
</div>
<div class="row">
  <label class="col-3">パスワード（６文字以上）</label>
    <div class="col-2.5">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
</div>
<div class="row">
  <label class="col-3">パスワード（確認用）</label>
    <div class="col-2.5">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
</div>

  <!--<div class="actions">-->
    <div class="row">
      <label class="col-3">　　　　　</label>
        <div class="col-3">
        <div class="actions">
         <%= f.submit "新規登録" %>
        </div>
     </div>
    </div>
  <!--</div>-->
<% end %>


<h4>既に登録済みの方</h4>
　　<%= link_to "こちら", new_customer_session_path %>　からログインしてください。
</div>


