<%= link_to "商品一覧", admin_items_path %>
<div class="container">
  <div class="row">
    <h1>ジャンル一覧・追加</h1>
    <div class="col-md-3">
<%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
        <div class="form-group">
         <%= f.label :ジャンル名 %>
         <%= f.text_field :name %>
         <%= f.submit '新規登録' %>
        </div>

     <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse">
　　　<thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>

  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", genre_edit_path(genre.id) %></td>
    </tr>
  <% end %>
      </tbody>
      </table>
     </div>
  </div>
</div>


<% end %>