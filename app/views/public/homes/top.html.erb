 <h3>新着商品</h3>
 <div class="row">
        <% @items.first(4).each do |item| %>
          <div class="col" style="padding-right: 0px; padding-left: 0px;">
            <%= link_to  public_item_path(item.id) do %>
              <% if item.image.attached? %>
                <%= image_tag item.image, size: "200x150" %></br>
              <% else %>
                <%= image_tag 'no_image', size: "200x150" %></br>
              <% end %>
            <% end %>
            <%= item.name %></br>
            ¥<%= item.price %>
          </div>
        <% end %></br>
 </div>
 <h6><%= link_to "全ての商品を見る >", items_path %></h6>
</div>