<h2>配送先編集</h2>
<%= form_with model: @address, url: address_update_path(@address.id), method: :patch do |f| %>
        <div class="form-group">
         <%= f.label :郵便番号（ハイフンなし） %>
         <%= f.text_field :postal_code %>
        </div>

        <div class="form-group">
         <%= f.label :住所 %>
         <%= f.text_field :address %>
        </div>

        <div class="form-group">
         <%= f.label :宛名 %>
         <%= f.text_field :name%>
         <%= f.submit '登録内容を保存' %>
        </div>
<% end %>
