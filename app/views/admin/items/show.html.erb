<div class="container">
  <div class="mt-4">
  <div class="row text-center">
    <div class="col-5">
      <h4 class="bg-light">商品詳細</h4>
    </div>
  </div>
  </div>
  <div class="row">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "200x150" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x150" %>
      <% end %>

    <div class="col-6">
      <label>商品名</label>
      :<%= @item.name %></br>

      <label>商品説明</label>
      :<%= @item.introduction %></br>

      <label>ジャンル</label>
      :<%= @item.genre.name %></br>

      <label>税込価格</label>
      :<%= @item.with_tax_price %></br>

      <label>販売ステータス</label>
      :<%= @item.is_active %>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "編集する", item_edit_path, class: "btn btn-warning" %>
  </div>
</div>