<%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
<h1>商品一覧ページ</h1>
<%= link_to "＋", admin_items_new_path %></br>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
    <table class="table table-hover table-inverse">
    <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre_id %></td>
          <td><%= item.is_active %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
    </div>
  </div>
</div>
