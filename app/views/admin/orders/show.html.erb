<h2>注文履歴詳細</h2>
<label>購入者</label><%= @order.customer.first_name %><%= @order.customer.last_name %></br>
<label>注文日</label><%= @order.created_at.strftime("%Y/%m/%d") %></br>
<label>配送先</label><%= @order.postal_code %><%= @order.address %><%= @order.name %></br>
<label>支払方法</label><%= Order.payment_methods_i18n[@order.payment_method] %></br>
<label>注文ステータス</label>

<table>
  <thead>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
  </tr>
  </thead>
  <tbody>

    <% @order_detail.each do |order_detail| %>
   <tr>
     <td><%= order_detail.item.name %></td>
     <td><%= order_detail.item.with_tax_price %></td>
     <td><%= order_detail.amount %></td>
     <td><%= order_detail.item.with_tax_price*order_detail.amount %></td>

         <% @total += order_detail.item.with_tax_price*order_detail.amount %>
   </tr>
    <% end %>
  </tbody>

  <label>商品合計</label><%= @total %>
  <label>送料</label><%= 800 %>
  <label>請求金額合計</label><%= @total+800 %>

</table>
