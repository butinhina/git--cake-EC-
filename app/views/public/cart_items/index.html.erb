<h2>ショッピングカート</h2>
<%= link_to "カートを空にする", cart_items_destroy_all_path(@cart_items), method: :delete, data: {confirm: "本当に消しますか？"} %>
<table class="table table-hover table-inverse">
    <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= link_to  public_item_path(cart_item.item.id) do %>
                <%= image_tag cart_item.item.image, size: "50x50" %><%= cart_item.item.name %>
              <% end %>
          </td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td>
              <%= form_with model: cart_item, url: cart_item_update_path(cart_item.id), method: :patch do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit "変更" %>
              <% end %>
          </td>
          <td><%= cart_item.subtotal %></td>
          <td><%= link_to "削除する", cart_item_destroy_path(cart_item.id), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
        </tr>
        <% @total += cart_item.subtotal %>
      <% end %>
    </tbody>
</table>
<table>
      <tr>
        <th>合計金額</th>
        <td><%= @total %></td>
      </tr>
</table>
