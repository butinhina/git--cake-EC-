<div class="container">
  <div class="mt-4">
  <div class="row text-center">
    <div class="col-5">
      <h4 class="bg-light">会員一覧</h4>
    </div>
  </div>
  </div>
  <div class="mt-2">
  <div class="row justify-content-center">
   <div class="col-10">
    <table class="table table-hover table-inverse">
    <thead>
        <tr class="table-active">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.first_name, admin_customer_path(customer.id) %><%= link_to customer.last_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td><% if customer.is_active == true %>
              有効
              <% else %>
              退会
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
    </table>
   </div>
  </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @customers %>
  </div>
</div>